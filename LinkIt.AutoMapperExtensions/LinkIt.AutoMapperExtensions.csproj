<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>LinkIt.AutoMapperExtensions</Title>
    <Version>2.1.0</Version>
    <Company>Radio-Canada/CBC</Company>
    <Description>AutoMapper extensions to help map LinkIt Linked Sources to DTOs by convention.</Description>
    <Copyright>Copyright (c) 2017 CBC/Radio-Canada</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/cbcrc/LinkIt.AutoMapperExtensions/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/cbcrc/LinkIt.AutoMapperExtensions</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/cbcrc/LinkIt.AutoMapperExtensions/master/icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/cbcrc/LinkIt.AutoMapperExtensions</RepositoryUrl>
    <PackageTags>c#, data, integration, database, mapper</PackageTags>
    <Authors>St√©phane Leblanc, Laurent le Beau-Martin</Authors>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="6.2.2" />
  </ItemGroup>

</Project>
